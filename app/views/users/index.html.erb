<% content_for :title do %>
	Display All Users
<% end %>
	
<fieldset>
	<legend>Displaying All Users</legend>

	<table class="table table-bordered table-condensed">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.first_name %> <%= user.last_name %></td>
					<td><%= user.email_address %></td>
					<td>
						<%= link_to(user) do %>
							<button class="btn">Show User!</button>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	
</fieldset>

<%= link_to 'Add New User!', new_user_path %>
